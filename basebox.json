{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-east-1",
      "source_ami": "ami-d0f89fb9",
      "instance_type": "t1.micro",
      "ssh_username": "ubuntu",
      "ami_name": "chasballew-{{timestamp}}",
      "ami_description": "Basebox, generated with Packer.",
      "security_group_id": "sg-e1aad88a",
      "tags": {
        "OS_Version": "Ubuntu",
        "Release": "12.04-LTS",
        "Security Group": "SSH Only"
      }
    },
    {
      "type": "virtualbox",
      "guest_os_type": "Ubuntu_64",
      "iso_url": "http://releases.ubuntu.com/12.04/ubuntu-12.04.3-server-amd64.iso",
      "iso_checksum": "2cbe868812a871242cdcdd8f2fd6feb9",
      "iso_checksum_type": "md5",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "15m",
      "shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
      "boot_wait": "6s",
      "http_directory": "config/http",
      "output_directory": "packer-vbox-output",
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz noapic ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
        "hostname={{ .Name }} ",
        "fb=false debconf/frontend=noninteractive ",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
        "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
        "initrd=/install/initrd.gz -- <enter>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "config/basebox_sshd_config",
      "destination": "/tmp/basebox_sshd_config"
    },
    {
      "type": "file",
      "source": "config/issue.net",
      "destination": "/tmp/issue.net"
    },
    {
      "type": "file",
      "source": "config/chas_authorized_keys",
      "destination": "/tmp/chas_authorized_keys"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/users.sh",
        "scripts/vagrant.sh",
        "scripts/cleanup.sh"
      ],
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'",
      "override": {
        "virtualbox": {
          "execute_command": "echo 'vagrant'| {{ .Vars }} sudo -E -S sh '{{.Path}}'"
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "only": [
        "virtualbox"
      ],
      "vagrantfile_template": "config/Vagrantfile"
    }
  ]
}